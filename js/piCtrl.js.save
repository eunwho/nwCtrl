function getElapedTime(count){
	var second = count /1000;
	var hour = Math.floor( count / 3600 );
	var min  = Math.floor( second - hour * 3600);
 	var sec  = Math.floor( second - hour * 3600 - min * 60);

	return '운전시간 : '+hour +': 시간 : ' +min +' : 분 : '+sec+': 초 동작함';
}

